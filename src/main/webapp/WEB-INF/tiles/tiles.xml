<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

   <!-- main -->
   <definition name="main-layout" template="/WEB-INF/view/layout/common/baseLayout.jsp">
       <put-attribute name="header" value="/WEB-INF/view/layout/common/header.jsp" />
       <put-attribute name="body" value="" />
       <put-attribute name="footer" value="/WEB-INF/view/layout/common/footer.jsp" />
   </definition>
   <definition name="*" extends="main-layout">
       <put-attribute name="body" value="/WEB-INF/view/{1}.jsp" />
   </definition>
   <definition name="*/*" extends="main-layout">
       <put-attribute name="body" value="/WEB-INF/view/{1}/{2}.jsp" />
   </definition>

</tiles-definitions>
